---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="404 - Page Not Found | Wisabi Analytics" 
  description="The page you're looking for doesn't exist.">
  <Navigation />
  
  <!-- 404 Content -->
  <section class="min-h-[70vh] flex items-center justify-center bg-white px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Large 404 Number -->
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-brand-600 tracking-tight">404</h1>
      </div>

      <!-- Message -->
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Page Not Found
      </h2>
      <p class="text-lg text-gray-600 mb-12 max-w-md mx-auto">
        Looks like this page got lost in the data pipeline. Let's get you back on track.
      </p>

      <!-- Navigation Options -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16">
        <a 
          href="/"
          class="inline-flex items-center px-8 py-4 bg-gray-900 text-white rounded-xl font-semibold hover:bg-gray-800 transition-colors">
          Go to Homepage
        </a>
        <a 
          href="/services"
          class="inline-flex items-center px-8 py-4 border-2 border-gray-900 text-gray-900 rounded-xl font-semibold hover:bg-gray-50 transition-colors">
          View Services
        </a>
      </div>

      <!-- Helpful Links -->
      <div class="border-t border-gray-200 pt-8">
        <p class="text-sm text-gray-500 mb-4">Looking for something specific?</p>
        <div class="flex flex-wrap gap-4 justify-center text-sm">
          <a href="/services" class="text-brand-600 hover:underline font-medium">Services</a>
          <span class="text-gray-300">•</span>
          <a href="/case-studies" class="text-brand-600 hover:underline font-medium">Case Studies</a>
          <span class="text-gray-300">•</span>
          <a href="/about" class="text-brand-600 hover:underline font-medium">About</a>
          <span class="text-gray-300">•</span>
          <a href="/how-we-work" class="text-brand-600 hover:underline font-medium">How We Work</a>
          <span class="text-gray-300">•</span>
          <a href="/contact" class="text-brand-600 hover:underline font-medium">Contact</a>
        </div>
      </div>

      <!-- Optional: Book a Call CTA -->
      <div class="mt-12 p-8 bg-gradient-to-br from-brand-50 to-brand-100 rounded-2xl border border-brand-200">
        <p class="text-gray-700 mb-4">
          Or skip the search and talk to us directly
        </p>
        <button 
           data-cal-link="wisabianalytics/initial-consultation"
           data-cal-namespace="initial-consultation"
           data-cal-config='{"layout":"month_view","useSlotsViewOnSmallScreen":"true"}'
           class="inline-flex items-center px-6 py-3 bg-gray-900 text-white rounded-xl font-semibold hover:bg-gray-800 transition-colors">
          Book a Free Call
        </button>
      </div>
    </div>
  </section>

  <Footer />
</Layout>