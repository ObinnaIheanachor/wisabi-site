---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Insights - Wisabi Analytics" 
  description="Data engineering, AI, and analytics insights from the Wisabi team.">
  <Navigation />
  
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-white">
    <div class="max-w-[1120px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 tracking-tight">
          Insights
        </h1>
        <p class="text-xl text-gray-600 leading-relaxed">
          Practical guides, tutorials, and thought leadership on data engineering, AI/ML, and modern analytics.
        </p>
      </div>
    </div>
  </section>

  <!-- Current Content -->
  <section class="pb-20 bg-white">
    <div class="max-w-[1120px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <!-- YouTube -->
        <div class="bg-gray-50 rounded-2xl p-8">
          <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">YouTube Channel</h3>
          <p class="text-gray-600 mb-4 text-sm">10K+ subscribers learning data engineering and analytics</p>
          <a href="https://youtube.com/@wisabianalytics" target="_blank" class="text-brand-600 font-semibold hover:underline text-sm">
            Watch tutorials →
          </a>
        </div>

        <!-- Twitter -->
        <div class="bg-gray-50 rounded-2xl p-8">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Twitter/X</h3>
          <p class="text-gray-600 mb-4 text-sm">Daily threads on data, AI, and modern analytics</p>
          <a href="https://twitter.com/DataSenseiObi" target="_blank" class="text-brand-600 font-semibold hover:underline text-sm">
            Follow @DataSenseiObi →
          </a>
        </div>

        <!-- Newsletter -->
        <div class="bg-gray-50 rounded-2xl p-8">
          <div class="w-12 h-12 bg-brand-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Newsletter</h3>
          <p class="text-gray-600 mb-4 text-sm">Coming soon - weekly insights on data & AI</p>
          <p class="text-gray-400 text-sm">
            Subscribe to be notified
          </p>
        </div>
      </div>

      <!-- Coming Soon -->
      <div class="text-center py-16 border-2 border-dashed border-gray-300 rounded-2xl">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">More Content Coming Soon</h2>
        <p class="text-gray-600 mb-8">
          We're building out a comprehensive library of tutorials, case studies, and best practices.
        </p>
        <p class="text-sm text-gray-500">
          Have a topic you'd like us to cover? <a href="mailto:hello@wisabi.io" class="text-brand-600 font-semibold hover:underline">Let us know</a>
        </p>
      </div>
    </div>
  </section>

  <Footer />
</Layout>