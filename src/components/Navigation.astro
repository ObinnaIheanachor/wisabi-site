---
// Logo integrated into brand name
---

<nav class="sticky top-0 z-50 backdrop-blur bg-white/80 border-b border-gray-200">
  <div class="max-w-[1120px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
    
      <!-- Logo + Brand Name (transform positioning) -->
      <a href="/" class="flex items-center group">
        <img src="/logo.png" alt="Wisabi Analytics" class="h-10 w-auto -translate-y-0.5 group-hover:scale-105 transition-transform" />
        <span class="text-xl font-bold text-gray-900" style="margin-left: -22px;">isabi Analytics</span>
      </a> 
                                    
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="/services" class="text-gray-600 hover:text-gray-900 font-medium transition-colors">Services</a>
        <a href="/case-studies" class="text-gray-600 hover:text-gray-900 font-medium transition-colors">Case Studies</a>
        <a href="/about" class="text-gray-600 hover:text-gray-900 font-medium transition-colors">About</a>
        <a href="/insights" class="text-gray-600 hover:text-gray-900 font-medium transition-colors">Insights</a>
        <a href="/contact" 
           class="px-6 py-2.5 bg-gray-900 text-white rounded-lg font-semibold hover:bg-gray-800 transition-all">
          Book a Call
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden p-2 text-gray-900">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 bg-white">
    <div class="px-4 py-6 space-y-4">
      <a href="/services" class="block text-gray-700 hover:text-gray-900 font-medium">Services</a>
      <a href="/case-studies" class="block text-gray-700 hover:text-gray-900 font-medium">Case Studies</a>
      <a href="/about" class="block text-gray-700 hover:text-gray-900 font-medium">About</a>
      <a href="/insights" class="block text-gray-700 hover:text-gray-900 font-medium">Insights</a>
      <a href="/contact" class="block w-full text-center px-6 py-3 bg-gray-900 text-white rounded-lg font-semibold">
        Book a Call
      </a>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>