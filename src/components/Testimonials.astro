---
const testimonials = [
  {
    quote: 'Wisabi transformed our data infrastructure. Their expertise in modern data stack and AI integration delivered results beyond our expectations.',
    outcome: 'Reduced reporting time by 70%',
    name: 'Sarah Chen',
    role: 'CTO',
    company: 'UK Manufacturing',
    initials: 'SC'
  },
  {
    quote: 'The training program was exceptional. Our team went from basics to production-ready data pipelines in 8 weeks.',
    outcome: 'Team productivity up 3x',
    name: 'Michael Rodriguez',
    role: 'Head of Data',
    company: 'Financial Services',
    initials: 'MR'
  },
  {
    quote: 'Best technical partner we\'ve worked with. Deep expertise, clear communication, and delivered on time.',
    outcome: 'Saved 40 hours/week',
    name: 'Emily Watson',
    role: 'VP Engineering',
    company: 'SaaS Startup',
    initials: 'EW'
  }
];
---

<section class="py-24 bg-white">
  <div class="max-w-[1120px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-16">
      <p class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Client Results</p>
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 tracking-tight">
        Trusted by Industry Leaders
      </h2>
      <p class="text-lg text-gray-600">
        Real outcomes from real projects
      </p>
    </div>

    <!-- Testimonials with softer shadows -->
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div class={`rounded-2xl border border-gray-200 bg-white p-8 hover:shadow-sm transition-all duration-300 ${index === 1 ? 'md:scale-105' : ''}`}>
          <!-- Outcome callout -->
          <div class="inline-block px-3 py-1 bg-brand-50 text-brand-700 text-sm font-bold rounded-lg mb-6">
            {testimonial.outcome}
          </div>

          <!-- Quote -->
          <p class="text-gray-700 mb-6 leading-relaxed">
            "{testimonial.quote}"
          </p>

          <!-- Author -->
          <div class="flex items-center gap-3 pt-6 border-t border-gray-200">
            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-gradient-to-br from-brand-500 to-brand-600 text-white font-bold text-sm">
              {testimonial.initials}
            </div>
            <div>
              <p class="font-bold text-gray-900 text-sm">{testimonial.name}</p>
              <p class="text-xs text-gray-600">{testimonial.role}</p>
              <p class="text-xs font-semibold text-gray-700">{testimonial.company}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>